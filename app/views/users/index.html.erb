
<%= render 'users/user_info', user: @user %>


         <h2 class="mt-3">New book</h2>
          <%= form_with model: @book, url: books_path, local:true do |f| %>
           <div class="form-group">
           <label class="book_title">Title</label><br>

            <%= f.text_field :title , :class => 'form-control' %>
            </div>

           <div class="form-group">
           <label class="book_opinion">Opinion</label><br>
            <%= f.text_area :body , :class => 'form-control' %>
           </div>

           <div class="form-group">
             <%= f.submit 'Create Book' %>
           </div>
        <% end %>

        </div>
        <div class="col-md-8">
         <h2>Users</h2>
           <table class="table table-striped">
             <thead>
               <tr>
                 <th>image</th>
                 <th>name</th>
                 <th></th>
               </tr>
             </thead>
             <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
                  <td><%= user.name %></td>
                  <td><%= link_to "Show", user_path(current_user.id) %></td>

                </tr>
              <% end %>
             </tbody>
           </table>
        </div>
      </div>
   </div>

