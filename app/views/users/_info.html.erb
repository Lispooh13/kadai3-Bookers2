 <table class="table table-striped">
    <tr><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></tr>
      <tr>
	      <th>name</th>
	      <th><%= user.name %></th>
      </tr>
      <tr>
	      <th>Introduction</th>
	      <th><%= user.introduction %></th>
      </tr>
      <tr>
        <th>follows</th>
        <th><%= link_to user_followings_path(user) do %>
            <%= user.followings.count %>
            <% end %>
        </th>
      </tr>
      <tr>
        <th>followers</th>
        <th><%= link_to user_followers_path(user) do %>
            <%= user.followers.count %>
            <% end %>
        </th>
      </tr>
 </tbody>
   </table>
     <% unless @user == current_user %>
       <% if current_user.following?(user)%>
         <%= link_to "フォローを外す", user_relationships_path(user.id), class:"btn btn-info",method: :delete %>
       <% else %>
         <%= link_to "フォローをする", user_relationships_path(user.id), class:"btn btn-success",method: :post %>
       <% end %>
     <% end %>


