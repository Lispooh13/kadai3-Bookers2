
<div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">

          <h2>User info</h2>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
               <table class="table table-striped">
                <tbody>
                  <tr></tr>
                <tr>
	                <th>name</th>
	                <th><%= @user.name %></th>
                </tr>
                <tr>
	                <th>Introduction</th>
	                <th><%= @user.introduction %></th>
                </tr>
                </tbody>
              </table>
            <%= link_to "", edit_user_path(@user) ,class: "btn btn-outline-secondary btn-block fas fa-user-cog", method: :get %>


         <h2 class="mt-3">New book</h2>
          <%= form_with model: @book, url: books_path, local:true do |f| %>
           <div class="form-group">
           <label class="book_title">Title</label><br>

            <%= f.text_field :title , :class => 'form-control' %>
            </div>

           <div class="form-group">
           <label class="book_opinion">Opinion</label><br>
            <%= f.text_area :body , :class => 'form-control' %>
           </div>

           <div class="form-group">
             <%= f.submit 'Create Book' %>
           </div>
        <% end %>

        </div>
        <div class="col-md-8">
         <h2>Books</h2>
           <table class="table table-striped">
             <thead>
               <tr>
                 <th></th>
                 <th>Title</th>
                 <th>Opinion</th>
               </tr>
             </thead>
             <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
                  <td><%= link_to "book.title",book_path(@books) %></td>
                  <td><%= book.body %></td>

                </tr>
              <% end %>
             </tbody>
           </table>
        </div>
      </div>
   </div>

