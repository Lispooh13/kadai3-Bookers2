<%= render 'users/user_info', user: @user %>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: @books, url: books_path, local:true do |f| %>
    <div class="form-group">
      <label class="book_title">Title</label><br>
      
      <%= f.text_field :title , :class => 'form-control' %>
    </div>

    <div class="form-group">
       <label class="book_opinion">Opinion</label><br>
       <%= f.text_area :body , :class => 'form-control' %>
    </div>

    <div class="form-group">
       <%= f.submit 'Create Book',class: "btn btn-success" %>
    </div>
  <% end %>
 </div>

   <div class="col-md-8">
    <h2>Book detail</h2>
     <table class="table table-striped">
       <tbody>
         <tr>
          <td>
            <%= link_to user_path(@user) do%>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60,fallback: "no_image.jpg"%>
            <%= @user.name %>
            <% end %>
           </td>


          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          
          <% if @user.id ==current_user.id %>
           <td><%= link_to "Edit", edit_book_path(@book) ,class: "btn btn-sm btn-success edit_book_12180" %></td>
           <td><%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger destroy_book_12180", method: :delete ,"data-confirm" => "Are you sureï¼Ÿ" %></td>
          <% end %>

        </tr>
      </tbody>
     </table>
  </div>
 </div>
</div>
 