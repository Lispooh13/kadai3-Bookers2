<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: Book.new %>
    </div>
    
     <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-striped">
       <tbody>
         <tr>
          <td>
            <%= link_to user_path(@user) do%>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60,fallback: "no_image.jpg",size: '60x60'%>
            <%= @user.name %>
            <% end %>
           </td>


          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>

          <td class="favorite-btn_<%= @book.id %>">
           <%= render "favorites/favorite-btn", book: @book %>
           </td>
          <td class="comment_count">
            <%= render 'book_comments/comment_count',book: @book %>
          </td>
          

          <% if @user.id == current_user.id %>
           <td><%= link_to "Edit", edit_book_path(@book) ,class: "btn btn-sm btn-success edit_book_12180" %></td>
           <td><%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger destroy_book_12180", method: :delete ,"data-confirm" => "Are you sureï¼Ÿ" %></td>
          <% end %>
        </tr>
      </tbody>
     </table>
       <div class="comment_index">
        <%= render 'book_comments/comment_index', book: @book %>
      </div>
      <div class="comment">
      <%= render 'book_comments/comment', book: @book,book_comment: @book_comment %>
      </div>
  </div>
 </div>
</div>
