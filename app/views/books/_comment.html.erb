<table>
  <% book.book_comments.each do |book_comment| %>
    <% book_comment_user = book_comment.user %>
    <tr>
      <td>
        <%= link_to user_path(@user) do%>
           <%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60,fallback: "no_image.jpg",size: '60x60'%>
           <%= book_comment_user.name %>
         <% end %>
      </td>
      <td><%= book_comment.comment %></td>
      <% if book_comment_user == current_user %>
         <td><%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), class: "btn btn-sm btn-danger destroy_book_12180", method: :delete %></td>
      <% end %>
  <% end %>

     <%= form_with(model:[@book, @book_comment],local: true)do |f| %>
       <%= f.text_area :comment %>
       <%= f.submit "送信" %>
     <% end %>
