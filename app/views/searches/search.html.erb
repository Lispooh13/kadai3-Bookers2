<% if @range == "User" %>
   <table class="table table-striped">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" ,size: '60x60'%>
          </td>
          <td><%= link_to user_path(user) do %>
              <%= user.name %></td>
              <% end %>
      <% end %>
      </tbody
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
         <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
         <tr>
           <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" ,size: '60x60'%>
           </td>
           <td><%= link_to book_path(book) do %>
             <%= book.title %></td>
             <% end %>
           <td> <%= book.body %></td>
      <% end %>
    </tbody>
<% end %>
